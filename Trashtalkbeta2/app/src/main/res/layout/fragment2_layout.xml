<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
                      android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <TextView
        android:id="@+id/balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="120dp"
        android:text="TextView"
        android:textColor="@color/colorAccent"
        android:textAlignment="viewStart"

        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="50dp"
        android:textStyle="bold"
        tools:text="BALANCE" />

    <TextView
        android:id="@+id/xem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/balance"
        android:layout_alignTop="@+id/balance"
        android:layout_toEndOf="@+id/balance"
        android:layout_toRightOf="@+id/balance"
        android:textColor="@color/colorWhite"
        android:shadowColor="@color/colorAccent"
        android:gravity="fill_vertical"
        android:text="XEM"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/balance"
        android:layout_alignStart="@+id/balance"
        android:layout_below="@+id/balance"
        android:text="$~(null)US Dollars"
        android:textStyle="italic" />
</RelativeLayout>