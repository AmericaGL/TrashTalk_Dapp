<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vic.sample.fireapp2.MainActivity"
    android:background="@color/colorPrimary">






    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relLayout">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/relLayoutTopBar"
            android:layout_alignParentTop="true">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




            </android.support.design.widget.AppBarLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relLayoutMiddle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relLayoutTopBar">

            <TextView
                android:id="@+id/activityTitle3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/activityTitle3"
                android:layout_centerHorizontal="true"
                android:text="bugs, comments, feeback?"
                android:textStyle="bold" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/relLayoutBotBar"
            android:layout_alignParentBottom="true">


            <android.support.design.widget.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="@dimen/cardview_default_elevation"
                android:minWidth="@dimen/navigation_bar_height"
                android:id="@+id/bottomNavView_Bar"
                android:background="@android:color/black"
                app:menu="@menu/bottom_navigation_menu"
                app:itemBackground="@android:color/black"
                app:itemIconTint="@drawable/selector"
                app:itemTextColor="@drawable/text_selector">




            </android.support.design.widget.BottomNavigationView>



        </RelativeLayout>

        <EditText
            android:id="@+id/valueField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relLayoutMiddle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:ems="10"
            android:inputType="textPersonName"
            tools:text="valueField" />


        <Button
            android:id="@+id/addBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnConfirmSignOut"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="130dp"
            android:text="SUBMIT FEEDBACK" />


        <Button
            android:id="@+id/btnConfirmSignOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/relLayoutBotBar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="44dp"
            android:textColor="@android:color/holo_red_dark"
            android:text="SIGN OUT" />

    </RelativeLayout>














</android.support.design.widget.CoordinatorLayout>
